{
  "version": 2,
  "builds": [
    {
      "src": "book-admin/frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "public"
      }
    },
    {
      "src": "book-admin/backend/main.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/book-admin/backend/main.py"
    },
    {
      "src": "/static/(.*)",
      "dest": "/book-admin/frontend/public/static/$1"
    },
    {
      "src": "/(.*\\.(js|css|ico|png|jpg|jpeg|gif|svg|woff|woff2|ttf|eot))",
      "dest": "/book-admin/frontend/public/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/book-admin/frontend/public/index.html"
    }
  ]
}
